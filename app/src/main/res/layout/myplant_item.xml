<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="20dp"
    android:background="@android:color/white">

    <ImageButton
        android:id="@+id/myplant_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:background="#5153"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/myplant_image">

        <Button
            android:id="@+id/diaryBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#679950"
            android:textSize="20dp"
            android:text="DIARY"
            android:layout_marginRight="3dp"/>

        <Button
            android:id="@+id/detailBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#679950"
            android:textSize="20dp"
            android:text="DETAIL"
            android:layout_marginLeft="3dp"/>

    </LinearLayout>

    <!--<TextView
        android:id="@+id/nickname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button"
        android:background="#97a892"
        android:textColor="#ffffff"
        android:textSize="20dp" />-->

    <TextView
        android:id="@+id/myplant_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/button"
        android:background="#97a892"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/myplant_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/myplant_nickname"
        android:background="#97a892"
        android:textColor="#000000"
        android:textSize="20dp" />

</RelativeLayout>