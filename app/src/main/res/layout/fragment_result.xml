<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/result_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_goRecommend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="72dp"
            android:background="#00ff0000"
            android:text="@string/btn_goRecommend"
            app:layout_constraintEnd_toStartOf="@+id/announcementText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/announcementText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:text="@string/announcementText" />

    </LinearLayout>

    <TextView
        android:id="@+id/queryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/queryText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/resultRecommend"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>