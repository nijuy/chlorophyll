<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/plan_cv"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_weight="1"
        android:theme="@style/CalendarViewCustom"
        app:mcv_weekDayTextAppearance="@style/CalendarViewWeekCustomText"
        app:mcv_selectionColor="#3E009600"
        app:mcv_showOtherDates="defaults"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/plan_cv"
        app:layout_constraintTop_toBottomOf="@+id/plan_cv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plan_rv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="4"
        android:background="#00FFFFFF"
        android:overScrollMode="never"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="@+id/plan_tv"
        app:layout_constraintTop_toBottomOf="@+id/plan_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>