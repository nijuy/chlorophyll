<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/search_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="46dp">

        <Button
            android:id="@+id/button"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="25dp"
            android:background="@drawable/main_button_style"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/btn_recommend" />

        <ImageButton
            android:id="@+id/purify_best5_button"
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:layout_marginTop="160dp"
            android:layout_gravity="center|top"
            android:background="@drawable/image_search_round"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/plant_1" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="27dp"
            android:layout_marginTop="317dp"
            android:layout_marginStart="0dp"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:text="@string/purify_best_five"
            android:textSize="17sp"
            android:background="@drawable/text_search_round"
            android:textColor="#FFFFFF"/>

        <ImageButton
            android:id="@+id/herb_best5_button"
            android:layout_width="250dp"
            android:layout_height="160dp"
            android:layout_marginTop="120dp"
            android:layout_gravity="center"
            android:background="@drawable/image_search_round"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/plant_34" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="27dp"
            android:layout_marginTop="203dp"
            android:layout_marginStart="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/herb_best_five"
            android:textSize="17sp"
            android:background="@drawable/text_search_round"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/btn_search_round"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>