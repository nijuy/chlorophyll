                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/condition2_1" />

            <RadioButton
                android:id="@+id/condition2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/condition2_2" />

            <RadioButton
                android:id="@+id/condition2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/condition2_3" />

            <RadioButton
                android:id="@+id/condition2_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/condition2_4" />
        </RadioGroup>

        <TextView
            android:id="@+id/condition3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/condition3"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="172dp" />

        <RadioGroup
            android:id="@+id/group3"
            android:layout_width="408dp"
            android:layout_height="47dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="2dp"
