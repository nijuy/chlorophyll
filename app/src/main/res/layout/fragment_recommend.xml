<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_recommend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp">

        <Button
            android:id="@+id/btn_goSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:text="@string/btn_goSearch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recommendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recommendText"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="172dp" />

        <TextView
            android:id="@+id/condition1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/condition1"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="172dp" />

        <RadioGroup
            android:id="@+id/group1"
            android:layout_width="408dp"
            android:layout_height="47dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="203dp">

            <RadioButton
                android:id="@+id/condition1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/condition1_1" />

            <RadioButton
                android:id="@+id/condition1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/condition1_2" />

            <RadioButton
                android:id="@+id/condition1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/condition1_3" />

            <RadioButton
                android:id="@+id/condition1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/condition1_4" />
